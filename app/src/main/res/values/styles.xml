<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
    <!-- Customize your theme here. -->

    </style>

    <!-- Google Games main screen buttons. -->
    <style name="GoogleGamesButton" parent="@android:Widget.ImageButton">
        <item name="android:layout_width">@dimen/google_games_size</item>
        <item name="android:layout_height">@dimen/google_games_size</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Main screen main buttons. -->
    <style name="MainBottomButton" parent="android:Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.50</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
