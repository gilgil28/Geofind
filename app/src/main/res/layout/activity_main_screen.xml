<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_green_dark"
    tools:context=".MainScreenActivity">

    <TextView
        android:id="@+id/MainScreenLogo"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:textColor="@android:color/white"
        android:textSize="@dimen/logo_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/MainScreenGoogleGamesButtons"
        android:layout_below="@id/MainScreenLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">

        <ImageButton
            style="@style/GoogleGamesButton"
            android:id="@+id/MainScreenGoogleGames"
            android:src="@drawable/games_controller_white" />

        <ImageButton
            style="@style/GoogleGamesButton"
            android:id="@+id/MainScreenGoogleGamesAchievements"
            android:src="@drawable/games_achievements_white" />

        <ImageButton
            style="@style/GoogleGamesButton"
            android:id="@+id/MainScreenGoogleGamesLeaderBoards"
            android:src="@drawable/games_leaderboards_white" />

        <ImageButton
            style="@style/GoogleGamesButton"
            android:id="@+id/MainScreenGoogleGamesGifts"
            android:src="@drawable/games_gifts_white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/MainScreenIntroText"
        android:layout_below="@id/MainScreenGoogleGamesButtons"
        android:layout_above="@+id/MainScreenMainButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_screen_text_size"
            android:text="@string/main_screen_intro" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/MainScreenMainButtons"
        android:layout_below="@id/MainScreenMainButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">

        <Button
            style="@style/MainBottomButton"
            android:drawableTop="@drawable/ic_action_search"
            android:text="@string/main_screen_play_hunt" />

        <Button
            style="@style/MainBottomButton"
            android:drawableTop="@drawable/ic_action_new"
            android:text="@string/main_screen_create_hunt" />

    </LinearLayout>


</RelativeLayout>
