<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"

    android:background="@android:color/holo_green_dark"
    tools:context=".MainScreenActivity">

    <TextView
        style="@style/padding_top_bottom_left_right"
        android:id="@+id/main_screen_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/logo_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/main_screen_main_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            style="@style/main_bottom_button_half"
            android:drawableTop="@drawable/ic_action_play"
            android:onClick="openHuntList"
            android:text="@string/main_screen_play_hunt" />

        <Button
            style="@style/main_bottom_button_half"
            android:drawableTop="@drawable/ic_action_new"
            android:onClick="openHuntCreation"
            android:text="@string/main_screen_create_hunt" />

        <Button
            style="@style/main_bottom_button"
            android:drawableTop="@drawable/games_controller_white_small"
            android:text="@string/main_screen_google_play_games" />

        <Button
            style="@style/main_bottom_button"
            android:drawableTop="@drawable/ic_action_settings"
            android:onClick="openHuntList"
            android:text="@string/action_settings" />

    </LinearLayout>


</RelativeLayout>
